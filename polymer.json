{
  "lint": {
    "rules": [
      "polymer-2-hybrid"
    ]
  },
  "builds" : [{
    "js": {
      "minify": true,
      "compile": true
    },
    "bundle": {
      "excludes": ["bower_components/polymer/"],
      "stripComments": true
    },
    "css": {"minify": true},
    "html":{"minify": true},
    "insertPrefetchLinks": true,
    "addPushManifest": true,
    "addServiceWorker": true
  }]
}